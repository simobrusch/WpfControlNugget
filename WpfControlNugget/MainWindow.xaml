<Window x:Class="WpfControlNugget.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfControlNugget.Views"
        xmlns:local="clr-namespace:WpfControlNugget.ViewModel"
        Title="MainWindow" Height="490" Width="800" ResizeMode="NoResize">
    <Window.Resources>

        <DataTemplate DataType="{x:Type local:LogEntryViewModel}">

            <views:LogView/>

        </DataTemplate>

        <DataTemplate DataType="{x:Type local:LocationViewModel}">

            <views:LocationView/>

        </DataTemplate>

    </Window.Resources>

    <DockPanel LastChildFill="True">

        <StackPanel x:Name="Navigation" DockPanel.Dock="Top">

            <Button Content="Locations" Command="{Binding LocationsCommand}"/>

            <Button Content="LogEntries" Command="{Binding LogsCommand}"/>

        </StackPanel>

        <ContentControl x:Name="Pages" DockPanel.Dock="Right" Content="{Binding SelectedViewModel}"/>

    </DockPanel>
</Window>